#!/usr/bin/env python3
from transfer import Rclone, Argument

arg = Argument('transfer_rclone')
rclone = Rclone(options=arg.options)
if rclone.ready:
    rclone.mkdir()
    rclone.copy()
    rclone.ls()
    rclone.set_details()
    rclone.write_logfile()
else: print("TRANSFER> Rclone not ready!")


